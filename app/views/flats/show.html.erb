<%= render 'navbar' %>
<div class="map" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://upload.wikimedia.org/wikipedia/commons/thumb/1/15/Old-world-map.jpg/1200px-Old-world-map.jpg);">
</div>
<div class="container margin-top-negative">
  <div class="row">
    <div class="col-8 mt-3">
      <div class="card mb-4">
        <div class="card-body bg-light">
          <h1><%= @flat.name %></h1>
          <h5><%= @flat.address %></h5>
        </div>
      </div>
      <div class="card">
        <div class="card-body bg-light">
          <p><%= @flat.description %></p>
        </div>
      </div>
    </div>
    <div class="col-4">
      <div class="card mt-3">
        <div class="card-body bg-light">
          <h5>Book this place</h5>
          <form action="" abineguid="C44D7F934D8F4364933F371239E935C9">
            <div class="input-group">
              <span class="input-group-text" id="start-date-label">From:</span>
              <input type="text" class="form-control" placeholder="01/12/2022" aria-label="start-date" aria-describedby="start-date-label">
            </div>
            <div class="input-group mt-2">
              <span class="input-group-text" id="end-date-label">To:</span>
              <input type="text" class="form-control" placeholder="12/12/2022" aria-label="end-date" aria-describedby="start-date-label">
            </div>
            <input type="submit" value="Book" class="btn btn-success mt-2" style="width: 100%">
          </form>
        </div>
      </div>
      <div class="card mt-3">
        <div class="card-body bg-light">
          <div class="d-flex">
            <div class="d-flex align-items-center">
              <i class="fa-solid fa-people-line me-2"></i>
              <span><%= @flat.number_of_guests %></span>
            </div>
            <div class="d-flex align-items-center ms-3">
              <i class="fa-solid fa-euro-sign me-2"></i>
              <span><%= @flat.price_per_night %></span>
            </div>
          </div>
        </div>
      </div>
      <div class="card mt-3">
        <div class="card-body bg-light">
          <div class="d-flex justify-content-between">
            <h6 class="no-mb">Share</h6>
            <div class="flex">
              <i class="fa-brands fa-facebook-square me-2"></i>
              <i class="fa-brands fa-twitter-square me-2"></i>
              <i class="fa-brands fa-pinterest-square me-2"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
