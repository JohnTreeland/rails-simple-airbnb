<div class="card">
  <div class="card-image-top" style="background-image: url('')"></div>
  <div class="card-body bg-light">
    <h5 class="card-title"><%= flat.name %></h5>
    <div class="d-flex">
      <div class="d-flex align-items-center">
        <i class="fa-solid fa-people-line me-2"></i>
        <span><%= flat.number_of_guests %></span>
      </div>
      <div class="d-flex align-items-center ms-3">
        <i class="fa-solid fa-euro-sign me-2"></i>
        <span><%= flat.price_per_night %></span>
      </div>
    </div>
  </div>
  <div class="d-flex align-items-center ms-3 p-2">
    <%= link_to "More info", flat_path(flat), class: "btn btn-outline-primary me-3" %>
    <%= link_to "Edit", edit_flat_path(flat), class: "btn btn-outline-warning me-3" %>
    <%= link_to "Remove", flat_path(flat), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-outline-danger" %>
  </div>
</div>
